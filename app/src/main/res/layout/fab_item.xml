<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtHocPhan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawablePadding="16dp"
        android:text="Tạo học phần"
        android:drawableTint="@color/black"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_baseline_folder_shared_24"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="48dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawablePadding="16dp"
        android:text="Tạo thư mục"
        android:drawableTint="@color/black"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_baseline_folder_copy_24"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="48dp"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:drawablePadding="16dp"
        android:text="Tạo lớp học"
        android:drawableTint="@color/black"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_baseline_person_24"
        />
</LinearLayout>